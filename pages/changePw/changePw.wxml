
<view class="services_container">
  <view class="logo-banner" >
    <image mode='widthFix' src="{{bannerUrl}}"></image>
  </view>
   <view class='box'>
<van-cell-group>
  <van-field
    bind:input='inputName'
    required
    clearable
    label="用户名"
    placeholder="请重新输入您的用户名"
    bind:click-icon="onClickUsernameIcon"
  />

  <van-field
    bind:input='inputPassword'
    type="password"
    label="旧密码"
    placeholder="请输入旧的密码"
    required
    border="{{ false }}"
  />
    <van-field
    bind:input='inputNewPassword'
    type="password"
    label="新密码"
    placeholder="请输入新的密码"
    required
    border="{{ false }}"
  />
</van-cell-group>
<van-button bindtap='change' type="primary">确定</van-button>
<van-toast id="van-toast" />
  </view>
</view>

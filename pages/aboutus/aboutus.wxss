/* pages/students/index/index.wxss */

page {
    width: 100%;
    background-color: var(--background-color);
}

.box {
    display: flex;
    flex-direction: column;
    width: 690rpx;
    margin: auto;
}

.banner {
    padding: 20rpx 0;
    /* border-bottom: solid 1px #efefef; */
    width: 100%;
}

.banner .slide-image {
    width: 100%;
    display: flex;
    justify-content: center;
}

.slide-image image {
    width: 100%;
}

.text {
    position: relative;
}

.text block {
    padding: 60rpx;
    overflow: hidden;
}

.text-box {
    padding-left: 36rpx;
    padding-right: 36rpx;
    background-color: #fff;
}

.text-tittle {
    color: var(--tittle-color);
    margin-bottom: 24rpx;
    font-size: 34rpx;
}

.text-text {
    color: var(--content-color);
    font-size: 28rpx;
    line-height: 52rpx;
}

.photo {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.photo-item {
    flex-direction: column;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    /* border-bottom: solid 1px #efefef; */
}

.photo-image {
    width: 100%;
    display: flex;
    justify-content: center;
}

.photo-image image {
    width: 100%;
}

.photo-desc {
    font-size: 26rpx;
    color: var(--content-color);
    margin-top: 10rpx;
}

/* pages/parents/index/index.wxss */
pages{
  width: 100%;
  background-color: #f0f3f6;
}


.box {
    display: flex;
    flex-direction: column;
    width: 690rpx;
    margin: auto;
}

.banner {
  padding: 20rpx 0;
  /* border-bottom: solid 1px #efefef; */
  width: 100%;
height: 600rpx;
}



.blocks {
  display: flex;
    flex-direction: column;
    width: 690rpx;
    margin: auto;
  position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    padding: 0 0 75px;
}
.blocks block{
  padding: 30px;
    overflow: hidden;
}
.blocks-item {
    margin-bottom: 24px;
    padding: 24px;
    background-color: #fff;
    border-radius: 12rpx;
    box-shadow: 0 8px 12px #ebedf0;
}
.blocks-image{
  width: 100%;
  display:flex; 
                     
  justify-content: center;   
}
.blocks-image image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 12px;
}
.blocks-tittle{
    margin-bottom: 12px;
    font-weight: 500;
    font-size: 17px;
}
.blocks-desc {
color: #34495e;
    font-size: 14px;
    line-height: 26px;
}
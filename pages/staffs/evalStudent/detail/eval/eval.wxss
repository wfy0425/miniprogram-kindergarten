
page {
  width: 100%;
  background-color: var(--background-color);
}

.box {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: auto;
}

.banner {
  padding: 20rpx 0;
  /* border-bottom: solid 1px #efefef; */
  width: 100%;
}

.banner .slide-image {
  width: 100%;
  display: flex;
  justify-content: center;
}

.slide-image image {
  width: 100%;
}

/* 日期选择 */
.picker_group {
  height: 85rpx;
  line-height: 85rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #888;
  border-bottom: 1rpx solid #efefef;

}

.picker_group picker {
  /* background-color: yellow; */
  color: #64bff1;
  height: 55rpx;
  line-height: 55rpx;
  margin: 0 2%;
  padding: 0 2%;
  border: 1rpx solid #64bff1;
  border-radius: 30rpx;
}

.text {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 0 0 150rpx;
}

.text block {
  padding: 60rpx;
  overflow: hidden;
}

.text-box {
  margin-bottom: 48rpx;
  padding: 48rpx;
  background-color: #fff;
}

.text-tittle {
  color: var(--tittle-color);
  margin-bottom: 24rpx;
  font-size: 34rpx;
}

.text-text {
  color: var(--content-color);
  font-size: 28rpx;
  line-height: 52rpx;
}